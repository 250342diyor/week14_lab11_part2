#include <iostream>
using namespace std;

void fixNeg(int* arr, int size) {
    int* p = arr;
    for (int i = 0; i < size; i++, p++) {
        if (*p < 0) *p = 0;
    }
}

int main() {
    int n;
    cout << "Enter size: ";
    cin >> n;

    int* arr = new int[n];
    cout << "Enter elements: ";
    for (int i = 0; i < n; i++) cin >> arr[i];

    fixNeg(arr, n);

    cout << "Fixed array: ";
    for (int i = 0; i < n; i++) cout << arr[i] << " ";
}
