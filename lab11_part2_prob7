#include <iostream>
using namespace std;

int* findMax(int* arr, int size) {
    int* maxp = arr;
    int* p = arr;

    for (int i = 0; i < size; i++, p++) {
        if (*p > *maxp) maxp = p;
    }
    return maxp;
}

int main() {
    int n;
    cout << "Enter size: ";
    cin >> n;

    int* arr = new int[n];
    cout << "Enter elements: ";
    for (int i = 0; i < n; i++) cin >> arr[i];

    cout << "Max element: " << *findMax(arr, n);
}
